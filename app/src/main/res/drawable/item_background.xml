<!-- res/drawable/item_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item android:drawable="@android:color/white" />

    <!-- Border -->
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp">
        <shape>
            <solid android:color="#f9f9f9" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</layer-list>
